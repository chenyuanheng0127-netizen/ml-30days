{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run current Python file",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "console": "integratedTerminal"
    },
    {
      "name": "Run with args (prompt)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "args": ["${input:cliArgs}"]
    }
  ],
  "inputs": [
    {
      "id": "cliArgs",
      "type": "promptString",
      "description": "CLI args (e.g. --input data.csv --output out.csv)",
      "default": ""
    }
  ]
}
